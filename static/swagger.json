{
  "swagger": "2.0",
  "info": {
    "description": "API for Summoner Recommender system",
    "version": "1.0.0",
    "title": "Summoner Recommender API"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "tags": [
    {
      "name": "recommendation",
      "description": "Operations related to recommendations"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/recommendations/{summoner_name}": {
      "get": {
        "tags": ["recommendation"],
        "summary": "Get recommendations for a summoner",
        "description": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "summoner_name",
            "in": "path",
            "description": "The name of the summoner to get recommendations for",
            "required": true,
            "type": "string",
            "default": "Alokin1112"
          },
          {
            "name": "number_of_recommendations",
            "in": "query",
            "description": "The number of recommendations to return",
            "required": false,
            "type": "integer",
            "default": 10
          }
        ],
        "responses": {
          "200": {
            "description": "A list of recommendations",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "age": {
                    "type": "integer"
                  },
                  "country": {
                    "type": "string"
                  },
                  "languages": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "level": {
                    "type": "integer"
                  },
                  "losses": {
                    "type": "integer"
                  },
                  "name": {
                    "type": "string"
                  },
                  "rank": {
                    "type": "string"
                  },
                  "sex": {
                    "type": "string"
                  },
                  "tier": {
                    "type": "string"
                  },
                  "wins": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/recommendation/update/{summoner_name}": {
      "post": {
        "tags": ["recommendation"],
        "summary": "Update the status of a recommendation",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "summoner_name",
            "in": "path",
            "description": "The name of the summoner",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Status update information",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "recommendation": {
                  "type": "string",
                  "description": "The recommendation to update"
                },
                "status": {
                  "type": "string",
                  "description": "The new status of the recommendation ('accept' or 'reject')"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status update confirmation",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
